<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity_page"
    android:background="@drawable/texture3">

    <RelativeLayout
        android:id="@+id/settingFragment"
        style="@style/topbar_bg"
        android:background="@drawable/texture2">

        <ImageButton
            style="@style/topbar_return_img"
            tools:ignore="ContentDescription"
            />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="设置"
            tools:ignore="HardcodedText" />

        <Button
            style="@style/topbar_right_btn"
            android:text="恢复默认"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvSettingContactSettingRemind"
        style="@style/text_small"
        android:layout_width="match_parent"
        android:background="@color/alpha_3"
        android:gravity="center"
        android:padding="@dimen/item_left_tv_padding"
        android:visibility="gone"
        />

    <ScrollView
        android:id="@id/setting"
        style="@style/match_match"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llSettingAppSettingContainer"
                style="@style/ll_vertical_match_wrap">

                <LinearLayout
                    android:id="@id/setting"
                    style="@style/content_item_white"
                    android:layout_marginTop="@dimen/item_distance"
                    android:background="@drawable/texture3"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="缓存"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/ivSettingCache"
                        style="@style/content_item_rt_img"
                        android:paddingEnd="@dimen/item_padding_right"
                        app:srcCompat="@drawable/on"
                        tools:ignore="ContentDescription,RtlSymmetry" />
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@id/setting"
                    style="@style/content_item_white"
                    android:background="@drawable/texture3">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="预加载"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/ivSettingPreload"
                        style="@style/content_item_rt_img"
                        android:paddingEnd="@dimen/item_padding_right"
                        app:srcCompat="@drawable/on"
                        tools:ignore="ContentDescription,RtlSymmetry" />
                </LinearLayout>

                <View
                    style="@style/divider_horizontal_1px"
                    android:layout_marginBottom="@dimen/item_distance" />

                <LinearLayout
                    android:id="@id/setting"
                    style="@style/content_item_white"
                    android:background="@drawable/texture3">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="声音"
                        android:layout_width="0dp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/ivSettingVoice"
                        style="@style/content_item_rt_img"
                        android:paddingEnd="@dimen/item_padding_right"
                        app:srcCompat="@drawable/off"
                        tools:ignore="ContentDescription,RtlSymmetry" />
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@id/setting"
                    style="@style/content_item_white"
                    android:background="@drawable/texture3">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="振动"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/ivSettingVibrate"
                        style="@style/content_item_rt_img"
                        android:paddingEnd="@dimen/item_padding_right"
                        app:srcCompat="@drawable/on"
                        tools:ignore="ContentDescription,RtlSymmetry" />
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@id/setting"
                    style="@style/content_item_white"
                    android:background="@drawable/texture3">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="夜间免打扰(22:00-6:00)"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/ivSettingNoDisturb"
                        style="@style/content_item_rt_img"
                        android:paddingEnd="@dimen/item_padding_right"
                        app:srcCompat="@drawable/on"
                        tools:ignore="ContentDescription,RtlSymmetry" />
                </LinearLayout>

                <View
                    android:id="@id/setting"
                    style="@style/divider_horizontal_1px"
                    android:layout_marginBottom="@dimen/item_distance" />

                <LinearLayout
                    android:id="@id/setting"
                    style="@style/content_item_white"
                    android:background="@drawable/texture3">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="测试模式"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/ivSettingTestMode"
                        style="@style/content_item_rt_img"
                        android:paddingEnd="@dimen/item_padding_right"
                        app:srcCompat="@drawable/off"
                        tools:ignore="ContentDescription,RtlSymmetry" />
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@id/setting"
                    style="@style/content_item_white"
                    android:background="@drawable/texture3">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="第一次启动应用"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/ivSettingFirstStart"
                        style="@style/content_item_rt_img"
                        android:paddingEnd="@dimen/item_padding_right"
                        app:srcCompat="@drawable/off"
                        tools:ignore="ContentDescription,RtlSymmetry" />
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@id/setting"
                    style="@style/content_item_white"
                    android:background="@drawable/texture3">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="显示启动“长安宝藏”界面"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/ivSettingDirect"
                        style="@style/content_item_rt_img"
                        android:paddingEnd="@dimen/item_padding_right"
                        app:srcCompat="@drawable/off"
                        tools:ignore="ContentDescription,RtlSymmetry" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>