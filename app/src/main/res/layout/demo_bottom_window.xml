<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bottom_window_page" >

    <TextView
        android:id="@id/tvBaseTabTitle"
        style="@style/text_middle_black"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:text="tvBottomMenuWindowTitle"
        tools:ignore="HardcodedText" />

    <View style="@style/divider_horizontal_1px" />

    <LinearLayout
        style="@style/ll_horizontal_match_wrap"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tvBaseBottomWindowReturn"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <View style="@style/divider_vertical_1px" />

        <TextView
            android:id="@+id/tvDemoBottomWindowForward"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>

</LinearLayout>