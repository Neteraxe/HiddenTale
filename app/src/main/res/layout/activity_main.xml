<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".FindActivity"
    >

    <!--边缘对齐(layout_alignParentTop)-->
    <!--marginLeft相对兄弟控件的距离,padding内边距-->
    <Spinner
        android:id="@+id/choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:entries="@array/pos"
        />

    <Button
        android:id="@+id/find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button"
        android:layout_below="@+id/choice"
        android:layout_alignLeft="@+id/choice"
        android:layout_alignStart="@id/choice"
        android:onClick="onClickFindPos"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer"
        android:layout_toRightOf="@id/find"
        android:layout_toEndOf="@id/find"
        android:layout_below="@id/choice"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="onClickTimer"
        />

    <TextView
        android:id="@+id/views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find"
        android:layout_marginTop="24dp"
        android:text="@string/views"
        />

    <EditText
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/find"
        android:layout_alignStart="@id/find"
        android:layout_below="@+id/views"
        android:ems="10"
        />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_alignLeft="@+id/find"
        android:layout_alignStart="@+id/find"
        android:text="@string/share"
        android:onClick="onSendMessage"
        />
</RelativeLayout>