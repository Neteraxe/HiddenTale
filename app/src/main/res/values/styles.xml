<resources xmlns:android="http://schemas.android.com/apk/res/android">



    <style name="topbar_btn" parent="Theme.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
        <item name="android:minWidth">@dimen/topbar_btn_min_width</item>
        <item name="background">@drawable/texture3</item>
    </style>

    <style name="content_item_white" parent="content_item">
        <item name="background">@drawable/white_to_gray</item>
    </style>

    <style name="content_item_lf_tv" parent="text_middle">
        <item name="android:paddingRight">@dimen/padding_big</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
    </style>

</resources>