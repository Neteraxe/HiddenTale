<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_poi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="false"
                android:orientation="horizontal"
                android:padding="10dp">


                <TextView
                    android:id="@+id/text_poi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_poi_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="12sp"
                    />

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_marginStart="6dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="3dp"
                    android:drawableStart="@drawable/ic_info_18dp"
                    android:background="@drawable/bg_btn_poi_selector_2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="@string/details"
                    android:textSize="12sp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/text_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_marginStart="6dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="3dp"
                    android:drawableStart="@drawable/ic_share_18dp"
                    android:background="@drawable/bg_btn_poi_selector_2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="@string/share"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:focusable="true" />


                <TextView
                    android:id="@+id/text_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="3dp"
                    android:drawableStart="@drawable/ic_grade_18dp"
                    android:background="@drawable/bg_btn_poi_selector_2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="@string/favorite"
                    android:textSize="12sp"
                    android:focusable="true" />



                <TextView
                    android:id="@+id/text_nearby"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="3dp"
                    android:drawableStart="@drawable/ic_map_18dp"
                    android:background="@drawable/bg_btn_poi_selector_2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="@string/nearby"
                    android:textSize="12sp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/text_street"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_store_mall_directory_18dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:drawablePadding="3dp"
                    android:background="@drawable/bg_btn_poi_selector_2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="@string/scene"
                    android:textSize="12sp"
                    android:focusable="true" />


            </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>